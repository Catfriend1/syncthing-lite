<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navigationBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/appIntroBottomBarHeight"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/primary_dark"
        android:descendantFocusability="afterDescendants"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textSize="16sp"
            android:textStyle="bold"
            android:minWidth="@dimen/appIntroButtonMinWidth"
            android:minHeight="@dimen/appIntroBottomBarHeight"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            app:cornerRadius="12dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/button_stroke_selector"
            app:backgroundTint="@color/primary_dark" />

        <LinearLayout
            android:id="@+id/pageIndicators"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textSize="16sp"
            android:textStyle="bold"
            android:minWidth="@dimen/appIntroButtonMinWidth"
            android:minHeight="@dimen/appIntroBottomBarHeight"
            android:layout_marginStart="8dp"
            android:focusable="true"
            app:cornerRadius="12dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/button_stroke_selector"
            app:backgroundTint="@color/primary_dark"
            app:icon="@drawable/ic_arrow_forward_white_24dp"
            app:iconGravity="textEnd"
            app:iconPadding="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:textSize="16sp"
            android:textStyle="bold"
            android:minWidth="@dimen/appIntroButtonMinWidth"
            android:minHeight="@dimen/appIntroBottomBarHeight"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:focusable="true"
            app:cornerRadius="12dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/button_stroke_selector"
            app:backgroundTint="@color/primary_dark" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
