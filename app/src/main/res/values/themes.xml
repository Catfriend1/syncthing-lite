<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Syncthing" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="Theme.Syncthing.NoActionBar" parent="@style/Theme.Syncthing">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Syncthing.Intro" parent="@style/Theme.Syncthing.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@color/primary_intro</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

</resources>
